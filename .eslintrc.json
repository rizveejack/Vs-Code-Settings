{
    "extends": ["prettier", "airbnb-base", "next/core-web-vitals"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".ts", ".tsx"]
            }
        }
    },
    "env": {
        "browser": true
    },
    "rules": {
        "no-console": 0,
        "indent": 0,
        "semi": "off",
        "linebreak-style": 0,
        "import/prefer-default-export": 0,
        "import/extensions": 0,
        "no-restricted-exports": 0,
        "react/no-deprecated": 1,
        "comma-dangle": 0,
        "arrow-body-style": 0,
        "object-curly-newline": 0,
        "no-underscore-dangle": 0,
        "no-param-reassign": 0,
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 100,
                "tabWidth": 4,
                "semi": false
            }
        ]
    },
    "plugins": ["prettier"]
}

